<div class="d-flex justify-content-center">

    <div>
    <div>
        <h1>
            <b><%=postagem.titulo%></b>
        </h1>
    </div>
    
    <div>
        <p class="lead">Postado por <b><%=postagem.nomeUsuario%></b></p>
    </div>

    <div>
        <p class="lead"><small><b><%=postagem.postadoEm%></b></small></p>
    </div>

    <div>
